#!/bin/env python
# -*- coding: utf-8 -*-

def build(bld):
	import platform

	platform_libs = []

	if platform.system() == 'Windows':
		platform_libs.append('User32')


	sources = [
		'filesystem_file_loader.cpp',
		'main.cpp',
		'paths.cpp',
		'snygg.cpp',
	]

	obj = bld.program(
		source=sources,
		target='snygg',
		use=[
			'game',
			'board',
			'lua-board-provider',
			'segment',
			'core',
			'skin',
			'opengl2-skins',
			'svg-skin',
			'ymse',
			'sdl-game-core',

			'gl',
			'glew',
			'SDL',
			'SDLmain',
			'jpeg',
			'imlib',
			'boost_filesystem',
			'boost_system',
		],
		lib=platform_libs,
		includes=[],
	)
