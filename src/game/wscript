#!/bin/env python
# -*- coding: utf-8 -*-

def build(bld):
	sources = [
		'food_generator.cpp',
		'food_item.cpp',
		'item.cpp',
		'item_container.cpp',
		'item_with_life.cpp',
		'player.cpp',
		'snake.cpp',
		'snake_direction_listener.cpp',
		'digesting_growth_policy.cpp',
		'growth_policy.cpp',
		'immediate_growth_policy.cpp',
	]

	obj = bld.stlib(
		source=sources,
		target='game',
		use=[
			'game-loop',
			'core',
			'board',
		],
		lib=[],
		includes=[],
		export_includes=["."],
	)
