#!/bin/env python
# -*- coding: utf-8 -*-

def build(bld):
	sources = [
		'buffering_skin.cpp',
		'iurlstream.cpp',
		'logbuf.cpp',
		'main.cpp',
		'ologstream.cpp',
		'renderable_complex_polygon.cpp',
		'snygg_instance.cpp',
		'snygg_module.cpp',
		'urlbuf.cpp',
		'urlloader_file_loader.cpp',
	]

	obj = bld.program(
		source=sources,
		target='platform-pnacl_unstripped.bc',
		use=[
			'board',
			'core',
			'fileutil',
			'game',
			'game-loop',
			'geometry',
			#'gl-raii',
			'image',
			#'image-gl',
			'linear-algebra',
			'lua-board-provider',
			#'opengl2-skins',
			#'platform-desktop-sdl',
			#'sdl-game-core',
			'segment',
			'skin',
			'svg-skin',
			'win32-util',

			'ppapi_cpp',
			'ppapi',
			'ppapi_gles2',

			'pthread',
		],
		lib=[],
		includes=[]
	)
