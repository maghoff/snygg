#!/bin/env python
# -*- coding: utf-8 -*-

def build(bld):
	bld.recurse([
		'board',
		'core',
		'fileutil',
		'game',
		'game-loop',
		'geometry',
		'gl-raii',
		'image',
		'image-gl',
		'linear-algebra',
		'lua-board-provider',
		'opengl2-skins',
		'platform-desktop-sdl',
		'platform-pnacl',
		'sdl-game-core',
		'segment',
		'skin',
		'svg-skin',
		'win32-util',
	])
